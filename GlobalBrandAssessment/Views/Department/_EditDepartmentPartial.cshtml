@model AddAndUpdateDepartmentDTO


<form id="EditDepartmentForm" asp-action="Edit" >
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="input-field">
		<label asp-for="Name" class="form-label"></label>
		<input asp-for="Name" class="form-control" placeholder="Enter  Name" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	@* <div class="input-field"> *@
	@* 	<label asp-for="Description" class="form-label"></label> *@
	@* 	<input asp-for="Description" class="form-control" placeholder="Enter description"> *@
			
	@* 	<span asp-validation-for="Description" class="text-danger"></span> *@
	@* </div> *@

	<div class="input-field">
		<label asp-for="ManagerId" class="form-label"></label>
		<select asp-items="ViewBag._Manager" asp-for="ManagerId" class="form-select" disabled>
			@if (Model.ManagerId == null)
			{
				<option value="">No Manager</option>
			}
			<option value="">Select Manager</option>
		</select>
		<span asp-validation-for="ManagerId" class="text-danger"></span>
	</div>
	<input type="hidden" asp-for="ManagerId" />

	<div class="d-flex justify-content-center text-center mt-2">
		<input type="submit" value="Edit Department" class="btn btn-primary mx-2" />
		<a class="btn btn-danger mx-2" asp-action="Index">Back</a>
	</div>
</form>

