@model AddAndUpdateDepartmentDTO


<form id="EditDepartmentForm" asp-action="Edit" >
	<div class="input-field">
		<label asp-for="Name" class="form-label"></label>
		<input asp-for="Name" class="form-control" placeholder="Enter  Name" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>


	<div class="input-field">
		<label asp-for="ManagerId" class="form-label"></label>
		<select asp-items="ViewBag._Manager" asp-for="ManagerId" class="form-select">
			@if (Model.ManagerId == null)
			{
				<option value="">select	Manager</option>
			}

		</select>
		<span asp-validation-for="ManagerId" class="text-danger"></span>
	</div>

	<div class="d-flex justify-content-center text-center mt-2">
		<input type="submit" value="Edit Department" class="btn btn-primary mx-2" />
		<a class="btn btn-danger mx-2" asp-action="Index">Back</a>
	</div>
</form>

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}