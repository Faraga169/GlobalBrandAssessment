@model CreateDepartmentViewModel



<form asp-action="Create" id="CreateDepartmentForm">
	<div>
		<label asp-for="Name" class="form-label"></label>
		<input asp-for="Name" class="form-control" placeholder="Enter  Name" value="@Model?.Name" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="ManagerId" class="form-label"></label>
		<select asp-items="ViewBag._Manager" asp-for="ManagerId" class="form-select">

			<option value="">Select Manager</option>
		</select>
		<span asp-validation-for="ManagerId" class="text-danger"></span>
	</div>
	<div class="d-flex justify-content-center text-center mt-2">
		<input type="submit" value="Create Department" class="btn btn-primary mx-2" />
		<button class="btn btn-danger mx-2" asp-action="Index">Back</button>
	</div>
</form>


@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
