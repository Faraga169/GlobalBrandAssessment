@model IEnumerable<Department>

@if (Model.Count() > 0){




    @foreach (var department in Model)
    {
        <tr>
            <td scope="col">@department.Name</td>
            <td scope="col">@department.EmployeeCount</td>
            <td scope="col">@department.SumSalary</td>
            <td scope="col">@department.Manager?.FullName</td>
            <td scope="col">
                <a class="btn btn-outline-secondary " asp-action="Edit" asp-route-id="@department?.Id"><i class="fa-solid text-light mx-2 fa-pen-to-square"></i>Edit</a>
            </td>

            <td>
                <button class="btn btn-outline-danger deletebtn" data-id="@department?.Id">
                    <i class="fa-solid fa-delete-left mx-2"></i>
                    Delete
                </button>
            </td>
        </tr>

    }

    }
    else
    {
        <tr >
            <td colspan="7" class="alert alert-danger mt-2">No department Found in this Department</td>
        </tr>
    }


        
    
   