@model AddandUpdateTaskDTO


<form asp-action="Edit"  id="EditTaskForm">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="input-field">
		<label asp-for="Title" class="form-label"></label>
		<input asp-for="Title" class="form-control" placeholder="Enter Title" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="input-field">
		<label asp-for="Description" class="form-label"></label>
		<input asp-for="Description" class="form-control" placeholder="Enter description" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>


	<div class="input-field">
		<label asp-for="EmployeeId" class="form-label"></label>
		<select asp-items="ViewBag._Employees" asp-for="EmployeeId" class="form-select">
			@if (Model.EmployeeId == null || Model.EmployeeId == 0)
			{
				<option value="">select Department</option>
			}

		</select>
		<span asp-validation-for="EmployeeId" class="text-danger"></span>
	</div>

	<div class="d-flex justify-content-center text-center mt-2">
		<input type="submit" value="Edit Task" class="btn btn-primary mx-2" />
		<a class="btn btn-danger mx-2" asp-action="Index">Back</a>
	</div>
</form>