@model IEnumerable<GetAllAndSearchManagerDTO>

@if (Model.Count() > 0)

    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@string.Format("{0:C}", employee.Salary)</td>
            <td>
                <img src="@(employee.ImageURL ?? Url.Content("~/Images/defaultimage.jpg"))"
                alt="@employee.FirstName"
                style="width:100px;height:100px;object-fit:cover;" />
            </td>
            <td>@(string.IsNullOrEmpty(employee.Department) ? "No Department" : employee.Department)</td>
            <td>
                <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@employee.Id"><i class="fa-solid text-light mx-2 fa-pen-to-square"></i>Edit</a>
            </td>
            <td>
                <button class="btn btn-outline-danger deletebtn" data-id="@employee.Id">
					@Html.AntiForgeryToken()
                    <i class="fa-solid fa-delete-left mx-2"></i>
        Delete </button >
            </td>
        </tr>

    }


    else
    {
        <tr >
            <td colspan="7" class="alert alert-danger mt-2">No Employee Found in this Department</td>
        </tr>
    }


        
    
   