@model Employee



<form asp-action="Create" enctype="multipart/form-data" id="createEmployeeForm"> 
    <div> 
        <label asp-for="FirstName" class="form-label"></label> 
        <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" value="@Model?.FirstName" /> 
        <span asp-validation-for="FirstName" class="text-danger"></span>
        </div> 
        <div> 
            <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" value="@Model?.LastName" autocomplete="off" />
        <span asp-validation-for="LastName" class="text-danger"></span> 
        </div>
    <div >
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" placeholder="Enter Password" autocomplete="new-password">
        <span asp-validation-for="Password"></span>
    </div>
        <div> 
            <label asp-for="Salary" class="form-label"></label> 
            <input asp-for="Salary" class="form-control" placeholder="Enter Salary" value="@Model?.Salary" /> 
            <span asp-validation-for="Salary" class="text-danger"></span> 
        </div> 
        <div> 
            <label asp-for="Image" class="form-label"></label> 
            <input asp-for="Image" class="form-control" placeholder="Enter Image" value="@Model?.Image" /> 
            <span asp-validation-for="Image" class="text-danger"></span> 
        </div> 
            <div> 
                <label asp-for="DeptId" class="form-label"></label> 
                <select asp-items="ViewBag._Department" asp-for="DeptId" class="form-select"> 
                    <option value="">Select Department</option> 
                    </select> 
                    <span asp-validation-for="DeptId" class="text-danger"></span> 
                </div> 
                <div class="d-flex justify-content-center text-center mt-2"> 
                    <input type="submit" value="Create Employee" class="btn btn-primary mx-2" /> 
                    <a class="btn btn-danger mx-2" asp-action="Index">Back</a> 
                </div>
                </form>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}